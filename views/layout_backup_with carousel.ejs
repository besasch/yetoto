</head>

<body style="padding-top: 60px; padding-bottom: 40px;">

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">yetoto.</a>
            <div class="nav-collapse pull-right">
                <ul class="nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user icon-white"></i>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Profile</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <form class="navbar-search pull-right">
                <input type="text" class="search-query" placeholder="Search">
            </form>
        </div>
    </div>
</div>


<div class="container"> 

    <div class="jcarousel-container" style=" margin-bottom: 30px" >

        <button class="btn jcarousel-prev" style="height: 80px;  width: 30px; float: left;">
         <i class="icon-circle-arrow-left"></i>
        </button>

        <button class="btn jcarousel-next" style="height: 80px;  width: 30px; float: right;">
            <i class="icon-circle-arrow-right"></i>
        </button>

        <div class="" style="position: relative; overflow: hidden;">

            <ol id="mycarousel" class="span" style="white-space: nowrap; word-wrap: normal; margin: 0;">

                <li class="dropdown" style=" margin-left: 10px;">
                    <a href="/calendars">
                        <button class="btn btn-info" style="height: 80px;  width: 30px; ">
                            <i class="icon-plus icon-white"></i>
                        </button>
                    </a>
                </li>
                
                <% for (var i=0; i < calendars.length; i++) { %>

                <li class="dropdown">
                    <button class="dropdown-toggle" class="btn" data-toggle="dropdown">
                        <img src="/img/photo.jpg" style="width: 71px; height: 71px; padding: 2px;">
                    </button>
                    <ul class="dropdown-menu" style="position: relative;">
                        <li><a href="/calendars/<%= calendars[i]._id %>"><i class="icon-info-sign"></i> <%= calendars[i].title %></a></li>
                        <li><a href="/calendars/<%= calendars[i]._id %>"><i class="icon-comment"></i> Add Event</a></li>
                        <li class="divider"></li>
                        <li><a href="#"><i class="icon-ban-circle"></i> Hide</a></li>
                        <li><a href="#"><i class="icon-minus"></i> Unsubscribe</a></li>
                        <li class="divider"></li>
                        <li><a href="javascript: submitform()"><i class="icon-minus"></i> Delete Calendar</a></li>
                        
                        <form id="newCalForm" action="/calendars/<%= calendars[i]._id %>" method="post">
                            <input type="hidden" name="_method" value="delete" />
                        </form> 
                        <script type="text/javascript">
                            function submitform()
                            {
                                $(document).ready(function(){
                                    $("form#newCalForm").submit();
                                })
                            };
                        </script>   
                        
                    </ul>
                </li>

                <% } %>

            </ol>

        </div>

    </div>


    <%- body %>

</div>

